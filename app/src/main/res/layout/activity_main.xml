<!-- activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="31dp">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="132dp"
            android:layout_height="match_parent">

        </FrameLayout>

        <FrameLayout
            android:layout_width="133dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textview2"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:text="@string/airquality"
                android:textSize="30sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="156dp"
            android:layout_height="match_parent">

        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="162dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="106dp"
                android:layout_height="match_parent">

            </FrameLayout>

            <FrameLayout
                android:layout_width="235dp"
                android:layout_height="142dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="176dp"
                    android:layout_height="99dp"
                    android:contentDescription="@string/singe"
                    app:srcCompat="@drawable/joyeux" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="323dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="303dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="301dp">

                <LinearLayout
                    android:layout_width="441dp"
                    android:layout_height="312dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="68dp"
                        android:layout_height="279dp">

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="87dp"
                        android:layout_height="296dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="12dp" />

                            <ImageView
                                android:id="@+id/imageView8"
                                android:layout_width="match_parent"
                                android:layout_height="54dp"
                                app:srcCompat="@drawable/thermometerw" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="15dp" />

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="match_parent"
                                android:layout_height="58dp"
                                android:textSize="50sp"
                                app:srcCompat="@drawable/humidityb" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="22dp" />

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="match_parent"
                                android:layout_height="53dp"
                                app:srcCompat="@drawable/barometerb" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="22dp" />

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                app:srcCompat="@drawable/gasb" />

                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/thermometerw" />

                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="104dp"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="23dp" />

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Température"
                                    android:textSize="16sp"
                                    tools:ignore="DuplicateIds" />

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="53dp" />

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Humidité"
                                    android:textSize="16sp" />

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="53dp" />

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Préssion"
                                    android:textSize="16sp" />

                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="53dp" />

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Gaz"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </FrameLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="180dp"
                        android:layout_height="284dp">

                        <LinearLayout
                            android:layout_width="99dp"
                            android:layout_height="288dp"
                            android:orientation="vertical">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="23dp" />

                            <TextView
                                android:id="@+id/temp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="23 °C"
                                android:textSize="16sp"
                                tools:ignore="DuplicateIds" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="53dp" />

                            <TextView
                                android:id="@+id/hum"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2562 %"
                                android:textSize="16sp"
                                tools:ignore="DuplicateIds" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="53dp" />

                            <TextView
                                android:id="@+id/pre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2560"
                                android:textSize="16sp"
                                tools:ignore="DuplicateIds" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="53dp" />

                            <TextView
                                android:id="@+id/gaz"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="200"
                                android:textSize="16sp"
                                tools:ignore="DuplicateIds" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="36dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="155dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="181dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="match_parent">

            </FrameLayout>

            <LinearLayout
                android:layout_width="277dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonLire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assistance vocale" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="170dp"
                    android:layout_height="64dp"
                    android:text="Mode sombre"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>
